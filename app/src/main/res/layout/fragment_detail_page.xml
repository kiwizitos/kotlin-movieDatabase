<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.detail.presentation.DetailPageFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cdv_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/show_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:srcCompat="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/show_name"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/cdv_image"
            android:text="@string/show_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_name"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/cdv_image"
            android:text="@string/genres"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/show_genre_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/genres"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/cdv_image"
            android:text="@string/genre" />

        <TextView
            android:id="@+id/show_genre_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_genre_1"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/cdv_image"
            android:text="@string/genre"/>

        <TextView
            android:id="@+id/show_genre_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_genre_2"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/cdv_image"
            android:text="@string/genre"/>

        <TextView
            android:id="@+id/show_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_summary"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="@string/show_description"
            android:maxLines="3"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/show_summary_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_summary"
            android:background="#00FFFFFF"
            android:src="@drawable/more"
            android:animateLayoutChanges="true"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/cdv_image"/>

        <Spinner
            android:id="@+id/spn_seasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:spinnerMode="dropdown"
            android:layout_below="@id/divider"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_episodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spn_seasons"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/show_episode_cell"
            android:orientation="horizontal"
            tools:itemCount="2"
            android:nestedScrollingEnabled="false"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_summary"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/rcv_episodes"/>

    </RelativeLayout>
</ScrollView>
</LinearLayout>